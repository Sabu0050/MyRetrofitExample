<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sabututxp.myretrofitexample.activities.SingInActivity">

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter email "
        android:inputType="textEmailAddress"
        android:layout_marginBottom="40sp"
        android:layout_above="@+id/editPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter password "
        android:inputType="textPassword"
        android:layout_marginBottom="80sp"
        android:layout_above="@+id/buttonSignIn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:background="#FF5107"
        android:text="Sign In"
        android:layout_marginBottom="135sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textSize="12sp"
        android:textColor="#0fe"
        android:text="Creat New User"
        android:layout_below="@+id/editPassword"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
